<div class="container" id="container">
<h1>message board here</h1>


  <div class="post-container">
    <% @posts.each do |post|%>
    <h2><%= post.title %>(likes: <%= post.likes.count %>)</h2>
    <p><%= post.body %></p>
    <p><b><%= post.user.username %></b></p>
      <div class="comment-container">
      <%if post.comments.length != 0 %>
        <h3>Comments</h3>
          <%post.comments.each do |comment| %>
            <p><%= comment.body %>(likes: <%= comment.likes.count %>)- <%= comment.user.username %><p>
          <% end %>
        <% end %>
        </div>
      
    <% end %>
  </div>
</div>