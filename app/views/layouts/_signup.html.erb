<div class="signup-popup" id="signup-popup">
  <div class="form-container">
  <div class="x">
    <a href="javascript:void(0)" class="logx" onclick="closeSignUp()">&times;</a>
  </div>
      <h2>Login</h2>
        <%= form_tag sessions_path do  %>
          <%= text_field_tag :username, params[:username], placeholder: "username", :class => 'log-field input-field'  %>
          <%= password_field_tag :password, params[:password], placeholder:"password", :class => 'log-field input-field' %>
          <%= submit_tag "Register", :class => 'form-submit-button' %>
        <% end %>
  </div>
</div>