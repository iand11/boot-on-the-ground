<div class="container">
  <div class="form-container">
    <%= form_for @project do |f| %>
      <p>
        <span class="label"><%= f.label :title %></span> <br>
        <%= f.text_area :title, size:"40x1" %>
      </p>
      <p>
        <span class="label"><%= f.label :description %></span> <br>
        <%= f.text_area :description, size:"100x10" %>
      </p>
      <p>
       <%= f.submit %> 
      </p>
    <% end  %>
  </div>
</div>