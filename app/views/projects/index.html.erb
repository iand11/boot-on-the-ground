<div class="container" id="container">
    <% @projects.each do |project| %>
      <div class="project-card" onclick="flipCard()">
        <div class="flipper">
          <div class="front">
            <div class="project-image"></div>
            <h2 class="project-title"> <%= project.title %></h2>
          </div>
          <div class="back">
          <h2 class="project-title"> <%= project.title %></h2>
            <p class="project-description"><%= project.description %></p>
            <a class="project-url" href="<%= project.url %>"><%= project.url %></a>
            <h2 id="contributers-title">Contributers</h2>
            <% project.users.each do |contributer| %>
              <a href="/users/<%= contributer.id %>"><p class="contributer-name"><%= contributer.username %></p></a> 
            <% end  %>
          </div>
        </div>
      </div>
    <% end  %>
</div>