<div class="form-container-companies"> 
	<%= form_for @company, remote: true do |f| %>
	<div id="comp-form-goodies">
		<%= f.label "Company Name:" %>
	  <%= f.text_field :name, class: "name-field" %><br>
		<%= f.label "Company Description:" %>
	  <%= f.text_area :description, size: "50x5", class: "description-field"  %> <br>
	  <%= f.label "Company Logo:" %> 
	  <%= f.file_field :avatar %> <br>
	  <%= f.label "Company Link:" %>
	  <%= f.text_field :url %><br>
	  <%= f.submit %>
	<% end %>
	</div>
</div>