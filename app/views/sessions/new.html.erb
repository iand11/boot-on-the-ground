<div class="container">
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>  
  <div class="form-container">
    <h2>Login</h2>
      <%= form_tag sessions_path do  %>
      <%= text_field_tag :name, params[:name], placeholder: "me", :class => 'input-field'  %>
     <%= password_field_tag :password, params[:password], placeholder:"password", :class => 'input-field' %>
      

      <%= submit_tag "Login", :class => 'form-submit-button' %>
     <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path %>
      <% end %>
  </div>
</div>